@model Client
@{
    ViewData["Title"] = "Delete Client";
    var taskCount = Model.Tasks?.Count ?? 0;
}

<div class="page-header">
    <div>
        <h1 class="page-title text-danger">
            <i class="bi bi-exclamation-triangle"></i> Delete Client
        </h1>
        <p class="page-subtitle">This action cannot be undone</p>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <i class="bi bi-trash me-2"></i> Confirm Deletion
            </div>
            <div class="card-body text-center p-4">
                <div class="client-avatar mx-auto mb-3" style="width: 80px; height: 80px; font-size: 2rem; background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);">
                    @Model.Name.Substring(0, 1).ToUpper()
                </div>
                <h3>@Model.Name</h3>
                <p class="text-muted mb-4">
                    <span class="rate">@(Model.Currency == "USD" ? "$" : "â‚¹")@Model.HourlyRate.ToString("N2")/hour</span>
                </p>
                
                @if (taskCount > 0)
                {
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <strong>Warning:</strong> This client has <strong>@taskCount task(s)</strong> that will also be deleted.
                    </div>
                }
                
                <p class="mb-4">
                    Are you sure you want to delete this client? 
                    <strong>All associated tasks and billing data will be permanently removed.</strong>
                </p>
                
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-center gap-3">
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="bi bi-x-lg"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="bi bi-trash"></i> Delete Client
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
